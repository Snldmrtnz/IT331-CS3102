import 'package:flutter/material.dart';

void main() => runApp(MyCVApp());

class MyCVApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: MyCVScreen(),
    );
  }
}

